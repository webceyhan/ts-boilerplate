{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Typescript Boilerplate project that can be used as starter-template",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "watch": "ts-node-dev --respawn src/main.ts",
