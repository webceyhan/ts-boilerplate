{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Typescript Boilerplate project that can be used as starter-template",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "dev": "ts-node-dev --respawn src/main.ts",
    "clean": "rm -rf dist",
    "build": "npm run clean & tsc",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webceyhan/ts-boilerplate.git"
  },
  "keywords": [],
  "author": "Evren Ceyhan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webceyhan/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/webceyhan/ts-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}
